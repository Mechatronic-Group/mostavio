                </svg>
                <div class="text-center my-8">
                    <span class="dark:text-white">Transport <br />Canada </span>
                </div>
            </div>
        </Container>
        <FocusText {...focusText4} />
        <FeatureGrid
            content={featureContent2}
            gridClass="grid grid-cols-1 md:grid-cols-2"
        />
        <VideoBlock placeholderImage={VideoPlaceholder2} />
        <BoxedList />
        <Newsletter />
    </main>
</Layout>
