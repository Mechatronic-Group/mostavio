---
import Layout from "../layouts/Layout.astro";
import HeroCarousal from "@components/HeroCarousal.astro";
import { getCollection } from "astro:content";

// Media
import slide01 from "../assets/evtol_img/HeroBg4.png";
import VideoPlaceholder from "../assets/evtol_img/Gear.png";
import VideoPlaceholder2 from "../assets/evtol_img/parts.png";

import Thumbnail1 from "../assets/evtol_img/battery.png";
import Thumbnail2 from "../assets/evtol_img/propeller_wip.png";
import Thumbnail3 from "../assets/evtol_img/circut_board.png";
import Thumbnail4 from "../assets/evtol_img/batteries.png";

// Icons
import GearWideConnecIcon from "../assets/icons/gear-wide-connect.svg";
import BoundingBoxIcon from "../assets/icons/bounding-box.svg";
import BezierCurveIcon from "../assets/icons/bezier-curve.svg";
import MenuAppIcon from "../assets/icons/menu-app-fill.svg";

import Newsletter from "@components/NewsLetter.astro";
import FocusText from "@components/FocusText.astro";
import Carousel from "@components/Carousel.astro";
import FeatureGrid from "@components/FeatureGrid.astro";
import VideoBlock from "@components/VideoBlock.astro";
import Milestones from "@components/Milestones.astro";
import BoxedList from "@components/BoxedList.astro";
import { Image } from "astro:assets";
import Container from "@components/Container.astro";

let media: Array<string | ImageMetadata> = [slide01];
let bannerContent = {
    header: "Investing in MOSTAVIO",
    description: "",
};

let focusText = {
    header: null,
    subheader: null,
    description:
        "Our eVTOL aircraft is undergoing a comprehensive certification process to ensure it meets all \
        safety and regulatory requirements for commercial operation.",
};
let focusText2 = {
    header: "Safety and Redundancy Features",
    description:
        "Our eVTOL design incorporates advanced safety features to meet stringent certification requirements",
};

let focusText3 = {
    header: "All-Electric, Zero Emissions",
    description:
        "Our eVTOL operates on 100% electric power, ensuring zero local emissions and contributing to \
        cleaner urban air mobility.",
};

let focusText4 = {
    header: "Partnership with \n Transport Canada",
    description:
        "We are actively collaborating with Transport Canada to ensure our eVTOL aircraft meets all \
        necessary safety and regulatory standards.",
};

let imageTextContent = [
    {
        image: Thumbnail1,
        description:
            "Our eVTOL design incorporates advanced safety features to meet stringent certification requirements.",
    },
    {
        image: Thumbnail2,
        description:
            "Our eVTOL operates on 100% electric power, ensuring zero local emissions and contributing to cleaner urban air mobility.",
    },
    {
        image: Thumbnail3,
        description:
            "We are actively collaborating with Transport Canada to ensure our eVTOL aircraft meets all necessary safety and regulatory standards.",
    },
    {
        image: Thumbnail4,
        description:
            "Our eVTOL design incorporates advanced safety features to meet stringent certification requirements.",
    },
];

let featureContent2 = [
    {
        icon: GearWideConnecIcon,
        description:
            "Our cutting-edge eVTOL aircraft merges sleek design with advanced engineering. ",
    },
    {
        icon: MenuAppIcon,
        description:
            "Our cutting-edge eVTOL aircraft merges sleek design with advanced engineering. ",
    },
    {
        icon: BezierCurveIcon,
        description:
            "Our cutting-edge eVTOL aircraft merges sleek design with advanced engineering. ",
    },
    {
        icon: BoundingBoxIcon,
        description:
            "Our cutting-edge eVTOL aircraft merges sleek design with advanced engineering. ",
    },
];

const allReports = await getCollection("reports");
---

<Layout>
    <main class="space-y-16 sm:space-y-28 lg:space-y-32 pb-40 overflow-clip">
        <HeroCarousal media={media} content={bannerContent} />
        <FocusText {...focusText} />
        <Carousel />
        <Milestones />
        <Carousel />
        <FocusText {...focusText2} />
        <div class="mb-48">
            <Container>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {
                        imageTextContent.map((entry) => (
                            <div class="mt-20">
                                <Image
                                    class="h-80 w-full object-cover rounded-md"
                                    src={entry.image}
                                    alt="Thumbnail"
                                />
                                <p class="mt-10 dark:text-white text-center">
                                    {entry.description}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </Container>
        </div>

        <FocusText {...focusText3} />
        <VideoBlock placeholderImage={VideoPlaceholder} />
        <Container>
            <div class="w-full my-28">
                <svg
                    width="98"
                    height="47"
                    class="bg-white m-auto"
                    viewBox="0 0 98 47"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M23.5943 0H0.505859V46.6875H23.5943V0Z"
                        fill="#E73137"></path>
                    <path
                        d="M97.9205 0H74.832V46.6875H97.9205V0Z"
