---
import Container from "./Container.astro";
import Frame from "./Frame.astro";
import { cn } from "@lib/utils";
import { button } from "@tailus/themer-button";

interface FocusTextProps {
    header?: string;
    subheader?: string;
    description?: string | [string];
    link?: string;
    ctaLabel?: string;
}

const {
    header,
    subheader,
    description,
    link,
    ctaLabel = "Learn More",
} = Astro.props as FocusTextProps;
---

<section>
    <Container>
        <div class="relative">
            <div class="my-12 m-auto space-y-12 md:w-10/12 lg:w-10/12">
                {
                    header && (
                        <h2 class="text-center text-4xl font-bold text-gray-800 dark:text-white md:text-6xl">
                            {header}
                        </h2>
                    )
                }
                {
                    subheader && (
                        <h6 class="text-center text-2xl font-bold text-gray-800 dark:text-white md:text-3xl">
                            {subheader}
                        </h6>
                    )
                }
                {
                    description && (
                        <div class="text-center text-lg text-gray-600 dark:text-gray-300 space-y-4">
                            <Fragment set:html={description}></Fragment>
                        </div>
                    )
                }
                {
                    link && (
                        <div class="mt-8 flex flex-wrap justify-center gap-y-4 gap-x-6">
                            <Frame>
                                <a
                                    href={link}
                                    target="_blank"
                                    class={cn(
                                        button.primary.lg,
                                        "pb-[1px]",
                                        "relative z-[1]",
                                    )}
                                >
                                    {ctaLabel}
                                </a>
                            </Frame>
                        </div>
                    )
                }
            </div>
        </div>
    </Container>
</section>
