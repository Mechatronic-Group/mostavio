---
import Container from "./Container.astro";

interface Post {
  slug: string;
  header: string;
  date: string;
  tags?: string[];
  featured: boolean;
  thumbnail?: string;
  intro?: string;
  link?: string;
}

const { posts } = Astro.props as { posts: Post[] };
const featuredPosts = posts.filter((post) => post.featured);
const latestPosts = posts.filter((post) => !post.featured);
---

<section id="news">
  <Container>
    <div class="mb-12 space-y-2 text-center">
      <h2 class="text-3xl font-bold text-gray-800 md:text-4xl dark:text-white">
        Latest News and Highlights
      </h2>
      <p class="lg:mx-auto lg:w-6/12 text-gray-600 dark:text-gray-300">
        Catch up on the most important news, current events and highlights.
      </p>
    </div>
    {
      featuredPosts && (
        <div class="grid gap-8 mb-8">
          {featuredPosts.map((post, index) => (
            <div
              class={`group p-6 sm:p-8 bg-white border-t ${index === featuredPosts.length - 1 ? "border-b" : ""} border-gray-100 dark:shadow-none dark:border-gray-700  dark:bg-stone-950 bg-opacity-50  shadow-2xl shadow-gray-600/10 flex flex-col md:flex-row md:space-x-10`}
            >
              {post?.thumbnail && (
                <div class="relative overflow-hidden rounded-xl md:w-1/3">
                  <img
                    src={post.thumbnail}
                    alt={`Thumbnail for ${post.header}`}
                    loading="lazy"
                    class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
                  />
                </div>
              )}
              <div class="md:w-2/3">
                <div class="mt-6 relative">
                  <h3 class="text-2xl font-semibold text-gray-800 dark:text-white">
                    {post.header}
                  </h3>
                  {post?.intro && (
                    <p class="mt-6 mb-8 text-gray-600 dark:text-gray-300">
                      {post?.intro}
                    </p>
                  )}
                  {post?.link && (
                    <a class="inline-block" target="_blank" href={post?.link}>
                      <span class="text-info dark:text-blue-300">
                        Read more
                      </span>
                    </a>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      )
    }
    {
      latestPosts && (
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {latestPosts.map((post) => (
            <div class="group p-6 sm:p-8 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700  dark:bg-stone-950 bg-opacity-50 shadow-2xl shadow-gray-600/10">
              {post?.thumbnail && (
                <div class="relative overflow-hidden rounded-xl">
                  <img
                    src={post.thumbnail}
                    alt={`Thumbnail for ${post.header}`}
                    loading="lazy"
                    class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
                  />
                </div>
              )}
              <div class="mt-6 relative">
                <h3 class="text-2xl font-semibold text-gray-800 dark:text-white">
                  {post.header}
                </h3>
                {post?.intro && (
                  <p class="mt-6 mb-8 text-gray-600 dark:text-gray-300">
                    {post?.intro}
                  </p>
                )}
                {post?.link && (
                  <a class="inline-block" href={post?.link}>
                    <span class="text-info dark:text-blue-300">Read more</span>
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
      )
    }
  </Container>
</section>
