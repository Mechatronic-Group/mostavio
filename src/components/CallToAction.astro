---
import Container from "./Container.astro";
import Frame from "./Frame.astro";
import { cn } from "@lib/utils";
import { button } from "@tailus/themer-button";

interface FocusTextProps {
  header?: string;
  description?: string;
  link?: string;
  ctaLabel?: string;
}

const {
  header,
  description,
  link,
  ctaLabel = "Learn More",
} = Astro.props as FocusTextProps;
---

<div class="relative">
  <div
    aria-hidden
    class="opacity-0 dark:opacity-35 absolute [background-image:radial-gradient(theme(colors.gray.500),transparent_50%)] top-0 w-[1000px] z-10 h-[800px] left-1/2 -translate-x-1/2 -translate-y-1/3 pointer-events-none"
  >
  </div>
  <Container>
    <div class="relative">
      <div class="mt-6 m-auto space-y-6 md:w-8/12 lg:w-7/12">
        {
          header && (
            <h2 class="text-center text-4xl font-bold text-gray-800 dark:text-white md:text-5xl">
              {header}
            </h2>
          )
        }
        {
          description && (
            <p class="text-center text-lg text-gray-600 dark:text-gray-300">
              {description}
            </p>
          )
        }
        {
          link && (
            <div class="mt-8 flex flex-wrap justify-center gap-y-4 gap-x-6">
              <Frame>
                <a
                  href="https://beta.tailus.io/demo"
                  class={cn(button.primary.lg, "relative z-[1]")}
                >
                  {ctaLabel}
                </a>
              </Frame>
            </div>
          )
        }
      </div>
    </div>
  </Container>
</div>
