---
import { Image } from "astro:assets";
import Button from "../atoms/Button.astro";

interface Content {
    header: string;
    description: string;
}

interface Props {
    awardImages: any[];
    content?: Content;
    link?: string;
}

const defaultContent: Content = {
    header: "Pioneering Emergency Mobility",
    description:
        "Chosen as a Stage 1 winner from over 100 teams in a NASA-supported global challenge.",
};

const {
    awardImages,
    content = defaultContent,
    link = "/news/mostavio-wins-muse-design-award",
} = Astro.props;
---

<div class="my-18">
    <div
        class="flex flex-col md:flex-row md:items-center md:justify-between gap-6"
    >
        <div class="flex flex-col md:w-1/3 text-left md:text-right md:order-2">
            <h2 class="text-lg font-bold">{content.header}</h2>
            <p class="text-sm mt-2">{content.description}</p>

            <div class="flex gap-4 mt-4 justify-start md:hidden">
                {
                    awardImages.map((image) => (
                        <Image
                            src={image.src}
                            alt={image.name}
                            class="h-12 w-auto object-cover"
                        />
                    ))
                }
            </div>

            <Button
                link={link}
                containerClass="justify-start md:justify-end mt-4"
                variant="transparent"
            />
        </div>

        <div class="hidden md:flex gap-4 md:order-1">
            {
                awardImages.map((image) => (
                    <Image
                        src={image.src}
                        alt={image.name}
                        class="h-12 md:h-20 w-auto object-cover"
                    />
                ))
            }
        </div>
    </div>
</div>
