---
import Button from "./atoms/Button.astro";
import Container from "./molecules/Container.astro";

interface Job {
    title: string;
    description?: string;
    location?: string;
    team?: string;
    link?: string;
}

const { content } = Astro.props as { content: Job[] };
---

<section id="careers" class="pt-5">
    <Container>
        <div class="relative">
            <div class="my-12 m-auto space-y-12 md:w-10/12 lg:w-10/12">
                <h2
                    class="text-center text-5xl font-bold text-white md:text-6xl"
                >
                    Current Openings
                </h2>

                <p class="text-center text-lg text-gray-300">
                    Join the MOSTAVIO team and be part of the future of urban
                    transportation. Explore our current job openings and apply
                    to become a part of our innovative team.
                </p>
            </div>
        </div>
    </Container>
    
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="space-y-6">
            {
                content.map((job, index) => (
                    <div class="relative overflow-hidden rounded-xl border border-gray-700  hover:border-gray-600 transition-all duration-300 hover:shadow-2xl hover:shadow-blue-500/10">
                        <div class="p-8 flex flex-col md:flex-row md:items-center md:justify-between">
                            <!-- Job Info Section -->
                            <div class="flex-1 md:pr-8">
                                <div class="mb-4">
                                    <div class="flex items-center gap-4 text-sm text-gray-400 mb-2">
                                        {job?.team && (
                                            <span class="inline-flex items-center px-3 py-1 rounded-full bg-orange-500/10 text-[#FF8914] font-medium">
                                                {job.team}
                                            </span>
                                        )}
                                        {job?.location && (
                                            <span class="flex items-center gap-1">
                                                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                                                </svg>
                                                {job.location}
                                            </span>
                                        )}
                                    </div>
                                    <h3 class="text-2xl font-bold text-white job-card:hover:text-[#FF8914] transition-colors duration-300">
                                        {job.title}
                                    </h3>
                                </div>
                                
                                {job?.description && (
                                    <p class="text-gray-300 leading-relaxed">
                                        {job.description}
                                    </p>
                                )}
                            </div>

                            <div class="mt-6 md:mt-0 md:ml-8 flex-shrink-0">
                                <Button 
                                    variant="transparent" 
                                    link={job?.link || "/job-post"} 
                                    ctaLabel="Apply Now" 
                                    contentClass="inline-flex items-center justify-center px-6 py-3"
                                >
                                    <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                                    </svg>
                                </Button>
                            </div>
                        </div>

                        <!-- Subtle gradient border effect on hover -->
                        <div class="absolute inset-0 rounded-xl opacity-0 job-content-hover:hover:opacity-100 transition-opacity duration-300 pointer-events-none">
                            <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-orange-500/10 via-yellow-500/10 to-orange-500/10"></div>
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- Empty state if no jobs -->
        {content.length === 0 && (
            <div class="text-center py-16">
                <div class="mx-auto w-24 h-24 bg-gray-800 rounded-full flex items-center justify-center mb-6">
                    <svg class="w-12 h-12 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0H8m8 0v2a2 2 0 01-2 2H10a2 2 0 01-2-2V6"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">No Open Positions</h3>
                <p class="text-gray-400">Check back soon for new opportunities!</p>
            </div>
        )}
    </div>
</section>