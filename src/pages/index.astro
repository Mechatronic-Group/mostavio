---
import Layout from "../layouts/Layout.astro";
import FocusText from "@components/molecules/FocusText.astro";

import AircraftsSliderSection from "@components/AircraftsSliderSection.astro";
import SkyTechSection from "@components/SkyTechSection.astro";
import LatestNews from "@components/LatestNews.astro";
import PaintedImage from "@components/atoms/PaintedImage.astro";
import ModelViewer from "@components/molecules/ModelViewer.astro";
import FeatureCards from "@components/FeatureCards.astro";
import { Image } from "astro:assets";

// Media V2
import TeamPic from "../assets/v2/home/TeamPic.png";
import TeamPic2 from "../assets/v2/home/TeamPic2.png";
import SkyTechDrone from "../assets/v2/home/SkyTechDrone.jpg";
import IntroSectionImage from "../assets/v2/home/IntroSection.png";
---

<Layout>
	<main class="space-y-32 lg:space-y-38 pb-40 overflow-clip">
		<PaintedImage
			image={IntroSectionImage}
			alt="Mostavio Smoke Banner"
			content={{
				tagline: "Experience the Future of Flight",
				header: "Transforming Urban Air Mobility With Next-Generation eVTOL Technology",
			}}
			pattern={false}
			containerClass="relative h-[90vh] md:h-[95vh]"
			heightClass="h-[90vh] md:h-[95vh]"
			imageClass="absolute z-[1] object-bottom"
			contentClass="text-left top-1/5 z-[4]"
			headerClass="md:w-4/6"
		/>

		<FocusText
			tagline="Elevate. Electrify. Explore."
			description="At MOSTAVIO, we are at the forefront of urban transportation innovation.\
			 Our mission is to provide a seamless, eco-friendly, and efficient air travel experience\
			 through electric Vertical Take-Off and Landing (eVTOL) technology.\
			 Join us as we redefine the skies."
			containerClass="md:w-3/5 ml-auto mt-32 mb-96"
			contentClass="text-right"
		/>
		<PaintedImage
			image={TeamPic}
			containerClass="h-[50vh]  md:h-[95vh]"
			heightClass="h-[50vh]  md:h-[95vh]"
			imageClass="object-top"
			alt="MOSTAVIO Team Work Candid"
		/>
		<AircraftsSliderSection />
		<ModelViewer />

		<PaintedImage
			image={TeamPic2}
			containerClass="h-[55vh] md:h-[95vh]"
			imageClass="object-center"
			heightClass="h-[55vh] md:h-[95vh]"
			alt="MOSTAVIO Team Work"
		/>

		<FeatureCards />
		<SkyTechSection image={SkyTechDrone} />
		<LatestNews />
	</main>
</Layout>
